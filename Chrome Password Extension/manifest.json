{
  "name": "Password Protector",
  "version": "1.0",
  "description": "A password storage and autofill extension made by users, for users.",
  "manifest_version": 2,
  "background": {
    "scripts": [ "./background.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "images/PWP.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Password Protector"
  },
  "permissions": [
    "storage"
  ]
}